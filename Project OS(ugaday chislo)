import random # импортируем модуль random

var = int(input("Выберите вариант диапазона: 1- от 1 до n; 2- от i до n\nВведите номер варианта ->")) #выбор варианта диапазона 
Pop = 0 

match var:
    case 1:
        i = 1
        N = int(input("Введите максимальное число диапазона(>1) -> ")) # ввод максимального числа диапазона
        n = random.randint(1, N) # создание рандомного числа для угадывания
    case 2:
        i = int(input("Введите минимальное число диапазона -> "))  # ввод диапазона на усмотрение пользователя
        N = int(input(f"Введите максимальное число диапазона(>{i}) -> "))
        n = random.randint(i, N)

while True:
    if N == i: # проверка корректности заданного максимального числа
        print("Введено некорректное значение максимального числа!")
        break
    Ch = int(input(f"Введите ваше число(от {i} до {N}) -> ",))
    Pop += 1
    if Ch == n:
        print("Вы угадали!")
        print("Кол-во попыток: ", Pop)
        break
    elif Ch > n:
        print("Ваше число больше загадонного.")
    else:
        print("Ваше число меньше загаданного.")
    if Pop == 1000:
        print("Вы не смогли отгадать число(ЗА ТЫСЯЧУ ПОПЫТОК КАРЛ!).\nЗагаданное число = ",n)
        break
