import random
N = int(input("Введите максимальное число: "))
n = random.randint(1, N)
Pop = 0
while True:
    Ch = int(input(f"Введите ваше число(от 1 до {N}): ",))
    Pop += 1
    if Ch == n:
        print("Вы угадали!")
        print("Кол-во попыток: ", Pop)
        break
    elif Ch > n:
        print("Ваше число больше загадонного.")
    else:
        print("Ваше число меньше загаданного.")
    if Pop == 1000:
        print("Вы не смогли отгадать. Загаданное число = ",n)
        break
